<section class="first-view center-vertical">
	<h1>MUSIC SNS!!!</h1>
	<% if current_user.nil? %>
	<div>
			<form action="/signin" method="POST" class="form-inline">
				<input type="text" name="name" placeholder="ユーザー名" >
				<input type="password" name="password" placeholder="パスワード" >
				<input type="submit" value="ログイン" >
			</form>
	</div>
	<% end %>
</section>

  <section class="center-vertical">
    <h1>最新の投稿</h1>
    <div class="center-hrizontal">
			<% if !@posts.nil? %>
				<div class="center-vertical">
						<div class="center-hrizontal">
							<% @posts.each do |post| %>
								<div class="post center-vertical">
									<img src="<%= post.music_image %>" alt="<%= post.album %>">
									<p>artist:<%= post.artist %></p>
									<p>コメント:<%= CGI.escapeHTML(post.comment) %></p>
									<p>投稿者:<%= post.post_user %></p>
								</div>
							<% end %>
						</div>
				</div>
				<% else %>
					投稿がありません
				<% end %>
		</div>
  </section>