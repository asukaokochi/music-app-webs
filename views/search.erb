<main>
  <section class="center-vertical">
    <h1>検索フォーム</h1>
    <form action="/search" method="post">
      <input type="text" name="keyword" placeholder="アーティスト名">
      <input type="submit" value="検索">
    </form>
    <h2>検索結果</h2>
    <% if !@musics.nil? %>
      <div class="center-hrizontal">
        <% @musics.each do |music| %>
          <div class="post center-vertical">
            <img src="<%= music["artworkUrl100"] %>">
            <p><%= music["artistName"] %></p>
            <p><%= music["collectionName"] %></p>
            <p><%= music["trackName"] %></p>
            <a href="<%= music["previewUrl"] %>">サンプル</a>
            <%# フォーム %>
            <form action="/new" method="post">
              <input type="hidden" value="<%= music["artworkUrl100"] %>" name="music_image">
              <input type="hidden" value="<%= music["artistName"] %>"  name="artist">
              <input type="hidden" value="<%= music["collectionName"] %>" name="album">
              <input type="hidden" value="<%= music["trackName"] %>" name="track">
              <input type="hidden" value="<%= music["previewUrl"] %>" name="sample_music">
              <input type="text" name="comment" placeholder="コメント">
              <input type="submit" value="投稿">
            </form>
          </div>
        <% end %>
      </div>
    <% else %>
      検索結果がありません
    <% end %>
  </section>
</main>